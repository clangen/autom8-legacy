<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.clangen.autom8" >

    <!-- Required, otherwise on HDPI devices ListView dividers
    look jaggy. This probably affects other controls as well,
    but is most noticeable in ListViews.  -->
    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true" />

    <application
        android:name="org.clangen.autom8.Application"
        android:icon="@drawable/icon"
        android:theme="@android:style/Theme.Holo"
        android:label="@string/app_name" >

        <activity
            android:name=".ui.DevicesActivity"
            android:launchMode="singleInstance"
            android:theme="@style/DeviceActivityTheme"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.CAMERA_BUTTON" />
            </intent-filter>

        </activity>


        <receiver
            android:enabled="false"
            android:name=".receiver.CameraButtonReceiver" >
            <intent-filter android:priority="10000">
                <action android:name="android.intent.action.CAMERA_BUTTON" />
            </intent-filter>
        </receiver>

        <activity
           android:name=".ui.EditConnectionActivity"
           android:label="@string/edit_connection_name" />

        <activity
           android:name=".ui.ConnectionManagerActivity"
           android:label="@string/connection_manager_name" />

        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/settings_name" />

        <service android:label="@string/service_name" android:name=".service.ClientService">
            <intent-filter>
                <action android:name="org.clangen.autom8.service.ACTION_START_SERVICE" />
                <action android:name="org.clangen.autom8.service.ACTION_INC_CLIENT_COUNT" />
                <action android:name="org.clangen.autom8.service.ACTION_DEC_CLIENT_COUNT" />
            </intent-filter>
        </service>

        <receiver android:name=".BootCompletedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
       </receiver>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

</manifest>